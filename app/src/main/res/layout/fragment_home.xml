<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <android.support.v7.widget.CardView
        xmlns:font="http://schemas.android.com/apk/res/com.hari.app.agora_prototype"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.hari.app.agora_prototype.TypefacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Welcome John Doe"
                android:textColor="#000"
                android:textSize="32sp"
                android:textStyle="bold"
                font:typeface="custombold.ttf" />

            <ImageView
                android:id="@+id/dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:src="@drawable/agora" />


            <Button
                android:id="@+id/voteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_yellow"
                android:padding="20dp"
                android:text="Cast your vote"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <com.hari.app.agora_prototype.TypefacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                font:typeface="custom.ttf"
                android:text="About Agora"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="28sp" />

            <com.hari.app.agora_prototype.TypefacedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Help"
                font:typeface="custom.ttf"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="28sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>